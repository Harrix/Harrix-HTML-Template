{
  "name": "harrix-html-template",
  "version": "1.0.0",
  "description": "HTML template",
  "main": "src/index.js",
  "scripts": {
    "dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "start": "webpack-dev-server --mode development --open",
    "build": "webpack --mode production && prettier --print-width=120 --parser html --write dist/*.html",
    "clear-css": "purifycss dist/css/app.css dist/js/app.js dist/index.html --min --info --out dist/css/app.optimize.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Harrix/Harrix-HTML-Template.git"
  },
  "author": "Sergienko Anton <sergienkoanton@mail.ru> (https://harrix.org)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Harrix/Harrix-HTML-Template/issues"
  },
  "homepage": "https://github.com/Harrix/Harrix-HTML-Template#readme",
  "sideEffects": false,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.22",
    "@fortawesome/free-brands-svg-icons": "^5.10.2",
    "@fortawesome/free-regular-svg-icons": "^5.10.2",
    "@fortawesome/free-solid-svg-icons": "^5.10.2",
    "bulma": "^0.7.5",
    "highlight.js": "^9.15.10",
    "katex": "^0.11.0",
    "lg-autoplay.js": "^1.0.0",
    "lg-fullscreen.js": "^1.1.0",
    "lg-hash.js": "^1.0.0",
    "lg-pager.js": "^1.0.0",
    "lg-thumbnail.js": "^1.1.0",
    "lg-video.js": "^1.0.0",
    "lg-zoom.js": "^1.0.1",
    "lightgallery.js": "^1.1.3"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "purify-css": "^1.2.5",
    "raw-loader": "^3.1.0",
    "sass-loader": "^8.0.0",
    "terser-webpack-plugin": "^2.0.1",
    "webpack": "^4.39.3",
