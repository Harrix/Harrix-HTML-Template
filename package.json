{
  "name": "harrix-html-template",
  "version": "1.0.0",
  "description": "HTML template",
  "main": "src/index.js",
  "scripts": {
    "dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "start": "webpack-dev-server --mode development --open",
    "build": "webpack --mode production && prettier --print-width=120 --parser html --write dist/*.html",
    "clear-css": "purifycss dist/css/app.css dist/js/app.js dist/index.html --min --info --out dist/css/app.optimize.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Harrix/Harrix-HTML-Template.git"
  },
  "author": "Sergienko Anton <sergienkoanton@mail.ru> (https://harrix.org)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Harrix/Harrix-HTML-Template/issues"
  },
  "homepage": "https://github.com/Harrix/Harrix-HTML-Template#readme",
  "sideEffects": false,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-brands-svg-icons": "^5.15.3",
    "@fortawesome/free-regular-svg-icons": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "bulma": "^0.9.2",
    "highlight.js": "^10.7.2",
    "katex": "^0.13.11",
    "lg-autoplay.js": "^1.2.0",
    "lg-fullscreen.js": "^1.2.0",
    "lg-hash.js": "^1.0.0",
    "lg-pager.js": "^1.0.0",
    "lg-thumbnail.js": "^1.2.0",
    "lg-video.js": "^1.3.0",
    "lg-zoom.js": "^1.3.0",
    "lightgallery.js": "^1.4.0"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^9.0.0",
    "css-loader": "^5.2.5",
    "css-minimizer-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.6.0",
    "node-sass": "^6.0.0",
    "prettier": "^2.3.0",
    "purify-css": "^1.2.5",
    "raw-loader": "^4.0.2",
    "sass-loader": "^11.1.1",
    "terser-webpack-plugin": "^5.1.2",
    "webpack": "^5.37.1",
