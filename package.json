{
  "name": "harrix-html-template",
  "version": "1.0.0",
  "description": "HTML template",
  "main": "src/index.js",
  "scripts": {
    "dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "start": "webpack serve --no-client-overlay-warnings",
    "build": "webpack --mode production && prettier --print-width=120 --parser html --write dist/*.html",
    "clear-css": "purifycss dist/css/app.css dist/js/app.js dist/index.html --min --info --out dist/css/app.optimize.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Harrix/Harrix-HTML-Template.git"
  },
  "author": "Sergienko Anton <sergienkoanton@mail.ru> (https://harrix.org)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Harrix/Harrix-HTML-Template/issues"
  },
  "homepage": "https://github.com/Harrix/Harrix-HTML-Template#readme",
  "sideEffects": false,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "bulma": "^0.9.4",
    "highlight.js": "^11.9.0",
    "katex": "^0.16.9",
    "lg-autoplay.js": "^1.2.0",
    "lg-fullscreen.js": "^1.2.0",
    "lg-hash.js": "^1.0.0",
    "lg-pager.js": "^1.0.0",
    "lg-thumbnail.js": "^1.2.0",
    "lg-video.js": "^1.3.0",
    "lg-zoom.js": "^1.3.0",
    "lightgallery.js": "^1.4.0"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.9.0",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.7.7",
    "prettier": "^3.2.4",
    "purify-css": "^1.2.5",
    "raw-loader": "^4.0.2",
    "sass": "^1.70.0",
    "sass-loader": "^14.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0"
  }
