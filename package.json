{
  "name": "harrix-html-template",
  "version": "1.0.0",
  "description": "HTML template",
  "main": "src/index.js",
  "scripts": {
    "dev": "webpack --config webpack.dev.js",
    "watch": "webpack --watch --config webpack.dev.js",
    "start": "webpack-dev-server --open --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js && html dist/*.html --indent-size 2",
    "beautify": "html dist/*.html --indent-size 2",
    "clear-css": "purifycss dist/css/app.css dist/js/app.js dist/index.html --min --info --out dist/css/app.optimize.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Harrix/Harrix-HTML-Template.git"
  },
  "author": "Sergienko Anton <sergienkoanton@mail.ru> (https://harrix.org)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Harrix/Harrix-HTML-Template/issues"
  },
  "homepage": "https://github.com/Harrix/Harrix-HTML-Template#readme",
  "sideEffects": false,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.2",
    "@fortawesome/free-brands-svg-icons": "^5.2.0",
    "@fortawesome/free-regular-svg-icons": "^5.2.0",
    "@fortawesome/free-solid-svg-icons": "^5.2.0",
    "bulma": "^0.7.1",
    "highlight.js": "^9.12.0",
    "katex": "^0.10.0-beta",
    "lg-autoplay.js": "^1.0.0",
    "lg-fullscreen.js": "^1.0.0",
    "lg-hash.js": "^1.0.0",
    "lg-pager.js": "^1.0.0",
    "lg-thumbnail.js": "^1.0.0",
    "lg-video.js": "^1.0.0",
    "lg-zoom.js": "^1.0.1",
    "lightgallery.js": "^1.0.3"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "cssnano": "^4.0.5",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-cli": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.9.2",
    "postcss-loader": "^2.1.6",
    "purify-css": "^1.2.5",
    "raw-loader": "^0.5.1",
    "sass-loader": "^7.0.3",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-merge": "^4.1.3"
  }
}
